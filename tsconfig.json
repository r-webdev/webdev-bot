{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": false,
		"outDir": "./dist",
		"rootDir": "./",
		"noEmit": true,
		"erasableSyntaxOnly": true
	},
	"include": ["*.ts", "src/**/*"],
	"exclude": ["node_modules", "dist"]
}
